{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react-native",
		"lib": ["es2017"],
		"types": ["react-native", "jest"],
		"moduleResolution": "node",
		"noEmit": false,
		"outDir": "./lib",
		"strict": true,
		"target": "esnext"
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js"
	]
}